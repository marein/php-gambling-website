<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
           xsd:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="csrf_protection.event_listener.csrf_protection_listener"
                 class="Gaming\Common\CsrfProtectionBundle\EventListener\CsrfProtectionListener">
            <argument type="service"
                      id="csrf_protection.guard"/>
            <tag name="kernel.event_listener" event="kernel.request"/>
        </service>

        <service id="csrf_protection.guard"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\LogicalOrGuard">
            <argument type="collection">
                <argument type="service"
                          id="csrf_protection.guard.safe_method_guard"/>
                <argument type="service"
                          id="csrf_protection.guard.path_guard"/>
                <argument type="service"
                          id="csrf_protection.guard.origin_header_guard"/>
                <argument type="service"
                          id="csrf_protection.guard.referer_header_guard"/>
                <argument type="service"
                          id="csrf_protection.guard.null_origin_header_guard"/>
            </argument>
        </service>

        <service id="csrf_protection.guard.safe_method_guard"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\SafeMethodGuard">
            <argument/>
        </service>

        <service id="csrf_protection.guard.path_guard"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\PathGuard">
            <argument/>
        </service>

        <service id="csrf_protection.guard.origin_header_guard"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\OriginHeaderGuard">
            <argument/>
        </service>

        <service id="csrf_protection.guard.referer_header_guard"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\RefererHeaderGuard">
            <argument/>
        </service>

        <service id="csrf_protection.guard.referer_header_guard.feature_toggle"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\FeatureToggleGuard"
                 decorates="csrf_protection.guard.referer_header_guard">
            <argument/>
            <argument type="service"
                      id="csrf_protection.guard.referer_header_guard.feature_toggle.inner"/>
        </service>

        <service id="csrf_protection.guard.null_origin_header_guard"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\NullOriginHeaderGuard"/>

        <service id="csrf_protection.guard.null_origin_header_guard.feature_toggle"
                 class="Gaming\Common\CsrfProtectionBundle\Guard\FeatureToggleGuard"
                 decorates="csrf_protection.guard.null_origin_header_guard">
            <argument/>
            <argument type="service"
                      id="csrf_protection.guard.null_origin_header_guard.feature_toggle.inner"/>
        </service>
    </services>
</container>
